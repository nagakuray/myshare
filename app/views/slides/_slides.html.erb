<div class="container">
  <div class="container-inner inner-default clearfix">
    <% slides.each do |slide| %>
      <div class="slide-box">
        <div class="image">
          <div class="img-wrap">
            <%= image_tag(slide.xpath('ThumbnailXLargeURL').text, alt: slide.xpath('Description').text) %>
          </div>
        </div>
        <div class="detail">
          <p class="title">
            <a href=<%= slide.xpath('URL').text %>; target="_blank"><%= slide.xpath('Title').text %></a>
          </p>
        </div>
        <div class="action clearfix">
          <%= link_to "" , root_path(item_code: "hoge"), class: "btn btn-sm btn-danger btn-like like", remote: true, method: :get %>
          <%= link_to "" , root_path(item_code: "hoge"), class: "btn btn-sm btn-info btn-later later", remote: true, method: :get %>
          <% if !slide.xpath('DownloadUrl').text.blank? %>
            <%= link_to "ダウンロード" , slide.xpath('DownloadUrl').text, class: "btn btn-sm btn-primary download" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
