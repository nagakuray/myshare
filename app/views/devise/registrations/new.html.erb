<div class="box">
  <h2 class="box-title">サインアップ</h2>
  <div class="box-inner">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <div class="field">
          <%= f.text_field :name, class: "  form-control" ,placeholder: "お名前" %>
        </div>
      </div>

      <div class="form-group">
        <div class="field">
          <%= f.email_field :email, class: "  form-control" ,placeholder: "メールアドレス" %>
        </div>
      </div>
      
      <div class="form-group">
        <div class="field">
          <%= f.password_field :password, class: "form-control" ,placeholder: "パスワード" %>
        </div>
      </div>

      <div class="form-group">
        <div class="field">
          <%= f.password_field :password_confirmation, class: "form-control" ,placeholder: "パスワード(確認)" %>
        </div>
      </div>

      <div class="submit-group">
        <div class="actions">
          <%= f.submit "登録する" , class: "btn btn-success"%>
        </div>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
